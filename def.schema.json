{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "version_name": {
            "type": "string"
        },
        "version_code": {
            "type": "number"
        },
        "author": {
            "type": "string"
        },
        "homepage": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "packages": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "entry": {
                        "type": "string"
                    },
                    "dependencies": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "type": {
                        "type": "string"
                    },
                    "modes": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "languagesdir": {
                        "type": "string"
                    },
                    "languages": {
                        "additionalProperties": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}